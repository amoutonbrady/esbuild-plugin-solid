    "babel-preset-solid": "^1.8.6"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^18.19.3",
    "del": "^7.1.0",
    "esbuild": "^0.17.19",
    "serve": "^14.2.1",
    "solid-js": "^1.8.7",
    "typescript": "^4.9.5"
  }
